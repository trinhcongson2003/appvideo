<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PlayVideoActivity">
    <RelativeLayout
        android:id="@+id/layoutXemVideo"
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <VideoView
            android:id="@+id/mainVideo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:id="@+id/layoutChucNang"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/videoPrev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_next"/>
                <ImageButton
                    android:id="@+id/pause_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_pause"/>
                <ImageButton
                    android:id="@+id/videoNext"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_next"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp">
                <TextView
                    android:id="@+id/thoiGianHienTai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"/>
                <TextView
                    android:id="@+id/tongThoiGian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60:00"/>
            </LinearLayout>
            <SeekBar
                android:id="@+id/seekBarVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:progressTint="#ff030f"
                android:thumbTint="#ff030f"
                android:progress="0"
                android:max="100"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="-5dp" />
            <ImageButton
                android:id="@+id/thu_phong"
                android:layout_width="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_height="30dp"
                android:background="@drawable/ic_phong"/>
        </RelativeLayout>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/layoutThongTin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ScrollView>

</LinearLayout>